<%- include('partials/header') %>

        <main>
            <section class="page--catalogue">
                <h3>Notre Catalogue</h3>
                    <div class="category">
                        <label for="category"></label>
                        <select id="category" name="category">
                            <option value="all">Sélectionnez une option</option>
                            <option value="asc">Prix croissant</option>
                            <option value="desc">Prix décroissant</option>
                        </select>
                    </div>
                    <!--boucle des différents produits-->
                    <div class="produits">
                        <% coffeesList.forEach(coffee => { %> 
                            <div class="produit">
                                <h4><%= coffee.name %></h4>
                                <p><%= coffee.description %></p>
                                <p><strong>Origine:</strong> <%= coffee.origine %></p>
                                <p><strong>Prix au kilo:</strong> <%= coffee.price %> €</p>
                                <p><strong>Goût:</strong> <%= coffee.taste %></p>
                                <p><strong>Disponibilité:</strong> <%= coffee.dispo ? 'Oui' : 'Non' %></p>
                                <a href="/article/<%= coffee.id %>">Découvrir</a>
                            </div>
                        <% }); %>                   
                    </div>
                <a class="display--all--link" href="./catalogue">Voir tout</a>
            </section>
        </main>

<%- include('partials/footer') %>
